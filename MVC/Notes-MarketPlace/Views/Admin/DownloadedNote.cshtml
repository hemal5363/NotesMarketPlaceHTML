@model IEnumerable<ProjectDB.Download>
@using ProjectDB
@{
    MarketPlaceEntities market = new MarketPlaceEntities();
}

@{
    ViewBag.Title = "DownloadedNote";
    Layout = "~/Views/Shared/_RagisterView.cshtml";
}

<!-- Admin Downloaded Notes -->
<section id="admin-downloaded-notes">
    <div class="content-box">
        <div class="add-note-details">
            <div class="container">
                <div class="row select-any">
                    <div class="col-md-12">
                        <div class="left-heading">
                            <h2> Downloaded Notes </h2>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="note">Note</label>
                            @{
                                var noteList = Model.Select(n => n.NoteTitle).Distinct().ToList();
                            }
                            @Html.DropDownList("Note", new SelectList(noteList, ViewBag.noteName), "Select note", new { @class = "form-control search-filter" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="seller">Seller</label>
                            @{
                                var sellerList = Model.Select(n => n.User.FirstName).Distinct().ToList();
                            }
                            @Html.DropDownList("Seller", new SelectList(sellerList), "Select seller", new { @class = "form-control search-filter" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="buyer">Buyer</label>
                            @{
                                var buyerList = Model.Select(n => n.User1.FirstName).Distinct().ToList();
                            }
                            @Html.DropDownList("Buyer", new SelectList(buyerList, ViewBag.buyerName), "Select buyer", new { @class = "form-control search-filter" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="search" style="margin-top: 25px;">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="search-bar">
                                        <input type="text" class="form-control" id="search-input" aria- placeholder="        search">
                                    </div>
                                    <div class="search-icon">
                                        <img src="/Images/search-icon.png" alt="Search Icon" title="Search">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="search-btn">
                                        <button class="btn blue-btn" title="Search" onclick="getDownloadedNote()" role="button"> SEARCH </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="getDownloaded"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Admin Downloaded Notes Ends-->
