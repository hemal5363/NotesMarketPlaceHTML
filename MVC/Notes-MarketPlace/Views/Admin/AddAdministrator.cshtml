@model Notes_MarketPlace.Models.AddAdminViewModel

@{
    ViewBag.Title = "AddAdministrator";
    Layout = "~/Views/Shared/_RagisterView.cshtml";
}

<!-- Admin Add Administrator -->
<section id="admin-add-administrator">
    <div class="content-box">
        <div class="add-note-details">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="left-heading">
                            <h2> Add Administrator </h2>
                        </div>
                    </div>
                </div>
                <div class="login-form">
                    <form method="post" action="/Admin/AddAdministrator">
                        @Html.HiddenFor(u => u.SID)
                        @Html.HiddenFor(u => u.UID)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(u => u.FirstName)
                                    @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control", placeholder = "Enter your first name" })
                                    @Html.ValidationMessageFor(u => u.FirstName)
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(u => u.LastName)
                                    @Html.TextBoxFor(u => u.LastName, new { @class = "form-control", placeholder = "Enter your last name" })
                                    @Html.ValidationMessageFor(u => u.LastName)
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(u => u.Email)
                                    @Html.TextBoxFor(u => u.Email, new { type = "email", @class = "form-control", placeholder = "Enter your email" })
                                    @Html.ValidationMessageFor(u => u.Email)
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(u => u.PhoneNumber)
                                    <div class="row">
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(u => u.PhoneNumber_CountryCode, new SelectList(Model.PhoneCountryCode), "00", new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(u => u.PhoneNumber, new { @class = "form-control", placeholder = "Enter your phone number" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(u => u.PhoneNumber_CountryCode)
                                    @Html.ValidationMessageFor(u => u.PhoneNumber)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn blue-btn" type="submit" title="Submit" role="button"> SUBMIT </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Admin Add Administrator Ends-->
