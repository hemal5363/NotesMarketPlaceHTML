@model Notes_MarketPlace.Models.SearchNoteViewModel

@{
    ViewBag.Title = "SearchNote";
    Layout = "~/Views/Shared/_RagisterView.cshtml";
}

<!-- Search Notes -->
<section id="search-notes">

    <!-- Search Content -->
    <div class="search-content">
        <div class="main-heading-center">
            <h1> Search Notes </h1>
        </div>
    </div>

    <div class="content-box-md">

        <!-- Search Filter -->
        <div id="search-filter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div id="filter-heading" class="heading-md">
                            <h3> Search and Filter notes </h3>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="filter-content">
                            <div class="login-form">
                                <form>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="search">
                                                <div class="form-group">
                                                    <div class="search-bar">
                                                        @Html.TextBoxFor(s => s.searchFilter.searchBar, new { @class = "form-control search-bar", id = "search-input-note", placeholder = "       Search Notes Here..." })
                                                        <div class="search-icon">
                                                            <img src="~/Images/search-icon.png" alt="Search Icon" title="Search">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                @Html.DropDownListFor(n => n.searchFilter.type, new SelectList(Model.types, "ID", "Name"), "Select type", new { @class = "form-control search-filter", value = 0 })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                @Html.DropDownListFor(n => n.searchFilter.category, new SelectList(Model.categories, "ID", "Name"), "Select category", new { @class = "form-control search-filter" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                @Html.DropDownListFor(n => n.searchFilter.univarsity, new SelectList(Model.universitys), "Select university", new { @class = "form-control search-filter" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                @Html.DropDownListFor(n => n.searchFilter.course, new SelectList(Model.courses), "Select course", new { @class = "form-control search-filter" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                @Html.DropDownListFor(n => n.searchFilter.country, new SelectList(Model.countries, "ID", "Name"), "Select country", new { @class = "form-control search-filter" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                @Html.DropDownListFor(n => n.searchFilter.reting, new SelectList(Model.retings), "Select reting", new { @class = "form-control search-filter" })
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total notes -->
        <div id="getNoteList"></div>

    </div>

</section>
<!-- search Notes Ends -->
