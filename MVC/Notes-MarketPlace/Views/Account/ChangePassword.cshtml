@model Notes_MarketPlace.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AccountView.cshtml";
}

<!-- Change Password Page -->
<section id="change-password-page">
    <div class="login">
        <div class="content">
            <img src="/Images/top-logo.png" alt="logo" class="img-responsive">
            <div class="login-content">
                <div class="login-heading">
                    <h1> Change Password </h1>
                </div>
                <div class="login-text">
                    <p> Enter your new password to change your password </p>
                </div>
                <div class="field-validation-error">
                    @Html.DisplayFor(u => u.Error)
                </div>
                <div class="login-form">
                    <form method="post" action="/Account/ChangePassword">
                        <div class="form-group">
                            @*<label for="old-password">Old Password</label>*@
                            @*<input type="password" class="form-control" id="old-password" name="old-password" aria- placeholder="Enter your password">*@
                            @Html.LabelFor(u => u.OldPassword)
                            @Html.TextBoxFor(u => u.OldPassword, new { type = "password", @class="form-control", placeholder="Enter your password"})
                            <span class="show-pass" target="#OldPassword"> <img src="/Images/eye.png"> </span>
                            @Html.ValidationMessageFor(u => u.OldPassword)
                        </div>
                        <div class="form-group">
                            @*<label for="new-password">New Password</label>*@
                            @*<input type="password" class="form-control" id="new-password" name="new-password" aria- placeholder="Enter your password">*@
                            @Html.LabelFor(u => u.NewPassword)
                            @Html.TextBoxFor(u => u.NewPassword, new { type = "password", @class = "form-control", placeholder = "Enter your password" })
                            <span class="show-pass" target="#NewPassword"> <img src="/Images/eye.png"> </span>
                            @Html.ValidationMessageFor(u => u.NewPassword)
                        </div>
                        <div class="form-group">
                            @*<label for="conform-password">Conform Password</label>*@
                            @*<input type="password" class="form-control" id="conform-password" name="conform-password" aria- placeholder="Enter your password">*@
                            @Html.LabelFor(u => u.ConformPassword)
                            @Html.TextBoxFor(u => u.ConformPassword, new { type = "password", @class = "form-control", placeholder = "Enter your password" })
                            <span class="show-pass" target="#ConformPassword"> <img src="/Images/eye.png"> </span>
                            @Html.ValidationMessageFor(u => u.ConformPassword)
                        </div>
                        <div class="login-page-button">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Change Password Page Ends -->
