@model ProjectModels.Models.UserModel

@{
    Layout = "~/Views/Shared/_AccountView.cshtml";
}

<!-- Login Page -->
<section id="login-page">
    <div class="login">
        <div class="content">
            <img src="~/Images/top-logo.png" alt="logo" class="img-responsive" title="Logo">
            <div class="login-content">
                <div class="login-heading">
                    <h1> Login </h1>
                </div>
                <div class="login-text">
                    <p> Enter your email address and password to login </p>
                </div>
                <div class="field-validation-error">
                    @Html.DisplayFor(u => u.Error)
                </div>
                <div class="login-form">
                    <form method="post" action="/Account/Login">
                        <div class="form-group">
                            @Html.LabelFor(u => u.EmailID)
                            @Html.TextBoxFor(u => u.EmailID, new { type = "email", @class = "form-control", placeholder = "Enter your email" })
                        </div>
                        <div class="form-group">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.LabelFor(u => u.Password)
                                    </div>
                                    <div class="col-md-6">
                                        <span id="forget-pass">
                                            <label for="forget-password"><a href="/Account/ForgotPassword" title="Forgot Password">Forgot password? </a></label>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            @Html.TextBoxFor(u => u.Password, new { type = "password", @class = "form-control password", placeholder = "Enter your password" })
                            <span class="show-pass" target=".Password"> <img src="~/Images/eye.png" alt="View" title="View"> </span>
                        </div>
                        <div class="form-group form-check">
                            @Html.CheckBoxFor(u => u.RememberMe, new { @class = "form-check-input" })
                            <label class="form-check-label" for="remember-me" id="remember-me">Remember Me </label>
                        </div>
                        <div class="login-page-button">
                            <button type="submit" class="btn btn-primary" title="login">Login</button>
                        </div>
                        <div class="dont-account">
                            <p> Don't have an account? <a href="/Account/Create" title="Sign Up">Sign Up </a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

