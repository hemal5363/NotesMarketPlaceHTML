@model ProjectModels.Models.UserModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AccountView.cshtml";
}

<!-- SignUp Page -->
<section id="signup-page">
    <div class="login">
        <div class="content">
            <img src="~/Images/top-logo.png" alt="logo" class="img-responsive" title="Logo">
            <div class="login-content">
                <div class="login-heading">
                    <h1> Create an Account </h1>
                </div>
                <div class="login-text">
                    <p> Enter your details to signup </p>
                </div>
                <div class="msg">
                    <span class="success">@Html.DisplayFor(u => u.Success)</span>
                </div>
                <div class="field-validation-error">
                    @Html.DisplayFor(u => u.Error)
                </div>
                <div class="login-form">
                    <form method="post" action="/Account/Create">
                        <div class="form-group">
                            @Html.LabelFor(u => u.FirstName)
                            @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control", placeholder = "Enter your first name" })
                            @Html.ValidationMessageFor(u => u.FirstName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.LastName)
                            @Html.TextBoxFor(u => u.LastName, new { @class = "form-control", placeholder = "Enter your last name" })
                            @Html.ValidationMessageFor(u => u.LastName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.EmailID)
                            @Html.TextBoxFor(u => u.EmailID, new { type = "email", @class = "form-control", placeholder = "Enter your email" })
                            @Html.ValidationMessageFor(u => u.EmailID)

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Password)
                            @Html.TextBoxFor(u => u.Password, new { type = "password", @class = "form-control", placeholder = "Enter your password" })
                            <span class="show-pass" target="#Password"> <img src="~/Images/eye.png" alt="View" title="View"> </span>
                            @Html.ValidationMessageFor(u => u.Password)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.ConformPassword)
                            @Html.TextBoxFor(u => u.ConformPassword, new { type = "password", @class = "form-control", placeholder = "Re-enter your password" })
                            <span class="show-pass" target="#ConformPassword"> <img src="~/Images/eye.png" alt="View" title="View"> </span>
                            @Html.ValidationMessageFor(u => u.ConformPassword)
                        </div>
                        <div class="login-page-button">
                            <button type="submit" class="btn btn-primary" title="Sign Up">Sign up</button>
                        </div>
                        <div class="dont-account">
                            <p> Already have an account? <a href="/Account/Login" title="Login">Login</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- SignUp Page Ends -->
